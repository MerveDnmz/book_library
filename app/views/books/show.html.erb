<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @book.image.url(:medium) %>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Name:</strong></td>
                <td><%= @book.name %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @book.description %></td>
              </tr>
              <tr>
                <td><strong>Publishers:</strong></td>
                <td><%= @book.publishers %></td>
              </tr>
              <tr>
                <td><strong>Authors:</strong></td>
                <td><%= @book.authors %></td>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @book.rating %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_book_review_path(@book) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_name"><%= @book.name %></h1>
        <p><%= @book.description %></p>

        <% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to add the first!</h3>
          <%= link_to "Write Review", new_book_review_path(@book), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
              <p><%= review.comment %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>

